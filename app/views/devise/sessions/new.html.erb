


<div class="min-h-screen bg-[#222831] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-[#ffd369] p-10 rounded-2xl shadow-lg">
    <!-- Шапка -->
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Вход
      </h2>

    </div>

    <!-- Форма -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6 " }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col space-y-4">
        <!-- Имя -->



        <div>
          <%= f.label :email, "Email", class: "sr-only" %>
          <%= f.email_field :email,
              autocomplete: "email",
              placeholder: "Email",
              class: "appearance-none rounded-md mx-auto relative block w-full px-3 py-2 border border-[#393e46] placeholder-[#393e46] text-[#222831] focus:outline-none focus:ring-[#222831] focus:border-[#222831] focus:z-10 sm:text-sm" %>
        </div>

        <!-- Пароль -->
        <div>
          <%= f.label :password, "Пароль", class: "sr-only" %>
          <%= f.password_field :password,
              autocomplete: "new-password",
              placeholder: "Пароль",
               class: "appearance-none rounded-md mx-auto relative block w-full px-3 py-2 border border-[#393e46] placeholder-[#393e46] text-[#222831] focus:outline-none focus:ring-[#222831] focus:border-[#222831] focus:z-10 sm:text-sm" %>

        </div>
      </div>

<div class="flex flex-row gap-2 justify-start items-center">
<% if devise_mapping.rememberable? %>

      <p><%= f.check_box :remember_me, class: "w-3.5 h-3.5 "%></p>
      <p><%= f.label :remember_me, "Запомнить меня", class: "text-black"  %></p>

  <% end %>
  </div>
      <!-- Кнопка -->
      <div>
        <%= f.submit "Войти",
            class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-[#393e46] hover:bg-[#222831] transition duration-300 ease-in-out cursor-pointer" %>
            <p class="mt-2 text-center text-sm text-[#393e46]">
        Нет аккаунта?<br>
        <%= link_to "Регистрация", new_user_registration_path, class: "font-medium text-[#393e46] hover:text-[#222831]" %>
      </p>
      </div>

    <% end %>

  </div>
</div>
