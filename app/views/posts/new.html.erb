<div class="max-w-2xl mx-auto flex flex-col justify-center px-4 py-8 h-screen">
<%= form_for @post do |f| %>

<div class="flex flex-col space-y-4 text-white">
 <div class="mt-4">
    <%= link_to "← На главную", root_path, class: "text-[#ffd369] hover:underline" %>
  </div>
  <%= f.label :content, "Напишите что то!",
  class: "bg-[#ffd369] text-[#222831] px-6 py-2 max-w-60 mx-auto rounded text-center" %>
  <%= f.text_area :content,
  class: "bg-[#393e46] text-white px-6 py-2 rounded min-h-120 p-6",
  placeholder: "Что нового..."
   %>

<%= f.submit "Создать",
  class: "bg-[#ffd369] text-[#222831] px-6 py-2 rounded hover:bg-[#ffd369]/50 cursor-pointer" %>
<% end %>
</div>
</div>
